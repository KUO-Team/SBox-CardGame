@using Sandbox.UI

@inherits Panel
@namespace CardGame.UI.Map

@if ( Event is null )
{
	return;
}

<root>
	<div class="main">
		<label class="event-text">@Event.Text</label>
		<div class="choices">
			@foreach ( var choice in Event.Choices )
			{
				var index = Event.Choices.IndexOf( choice );
				<div class="choice @(choice.Enabled ? "" : "disabled")" onclick="@( () => SelectChoice( choice, index ) )">
					@( choice.Text )
				</div>
			}
		</div>
	</div>
</root>
